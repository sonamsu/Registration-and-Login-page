<body class="bg-cover bg-center" style="background-image: url('https://source.unsplash.com/1600x900/?nature,water');">

     <div class="flex justify-center items-center min-h-screen bg-black bg-opacity-50">
          <div class="bg-white p-8 rounded-xl shadow-lg w-96">
               <h2 class="text-3xl font-semibold text-center text-gray-700 mb-6">Login</h2>

               <form id="loginForm" method="post" action="/login">
                    <div class="mb-4">
                         <label for="email" class="block text-sm font-medium text-gray-600">Email Address</label>
                         <input type="email" id="email" name="email"
                              class="w-full p-3 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
                              placeholder="Enter your email" required>
                    </div>

                    <div class="mb-6">
                         <label for="password" class="block text-sm font-medium text-gray-600">Password</label>
                         <input type="password" id="password" name="password"
                              class="w-full p-3 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
                              placeholder="Enter your password" required>
                    </div>

                    <button type="submit"
                         class="w-full py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition duration-200">Login</button>

                    <div class="mt-4 text-center text-sm text-gray-600">
                         <p>Don't have an account? <a href="/register" class="text-blue-600 font-medium">Register</a>
                         </p>
                    </div>
               </form>

               <div id="loginMessage" class="text-center mt-4 text-sm text-gray-600"></div>
          </div>
     </div>

